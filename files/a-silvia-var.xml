		<leovar:head>
			<leovar:title>
				A Silvia<leovar:var rel="#ms_na">.</leovar:var>
			</leovar:title>
			<leovar:annotation>
				<leovar:var rel="#ms_na">
					Pisa. 19.20.Aprile.1828.
				</leovar:var>
			</leovar:annotation>
		</leovar:head>
		<leovar:main>
			<leovar:lg type="canzone-libera">
				<leovar:lg type="stanza">
					<leovar:l n="1">
						Silvia, 
						<leovar:vars>
							<leovar:var rel="#ms_na,#piatti_1831">
								sovvienti
							</leovar:var>
							<leovar:var rel="#starita_1835">
								rammenti
							</leovar:var>
							<leovar:var rel="#lemonnier_1845">
								rimembri
							</leovar:var>
						</leovar:vars>
						ancora
					</leovar:l>
					<leovar:l n="2">
						Quel tempo
						<leovar:vars>
							<leovar:var rel="#ms_na,#piatti_1831">
								de la
							</leovar:var>
							<leovar:var rel="#starita_1835,#lemonnier_1845">
								della
							</leovar:var>
						</leovar:vars>
						tua vita mortale,
					</leovar:l>
					<leovar:l n="3">
						Quando beltà 
						<leovar:vars>
							<leovar:var rel="#ms_na">
								splende<leovar:del rend="doublestrikes(vertical)">v</leovar:del>a
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								splendea
							</leovar:var>
						</leovar:vars>
					</leovar:l>
					<leovar:var rel="#ms_na">
						<leovar:l n="3.1">
							<leovar:del rend="overstrike">Ne la fronte e nel sen tuo verginale,</leovar:del>
							<leovar:add place="margin left">Nel volto verginale</leovar:add>
						</leovar:l>
					</leovar:var>
					<leovar:l n="4">
						<leovar:del rend="doublestrikes(vertical)">E</leovar:del>
						<leovar:vars>
							<leovar:var rel="#ms_na,#piatti_1831">
								Ne gli 
							</leovar:var>
							<leovar:var rel="#starita_1835,#lemonnier_1845">
								Negli
							</leovar:var>
						</leovar:vars>
						<leovar:vars>
							<leovar:var rel="#ms_na">
								<leovar:subst>
									<leovar:del rend="overstrike" seq="1">sguardi incerti</leovar:del>
									<leovar:add place="supralinear" rend="unmarked" seq="2">occhi tuoi ridenti</leovar:add>
								</leovar:subst>
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								occhi tuoi ridenti
							</leovar:var>
						</leovar:vars>
						e fuggitivi,
						<leovar:var rel="#ms_na">
							<leovar:add place="margin left">E ne gli occhi tuoi molli e fuggitivi. dolci, vaghi</leovar:add>
						</leovar:var>
					</leovar:l>
					<leovar:l n="5">
						E tu, lieta e 
						<leovar:vars>
							<leovar:var rel="#ms_na">
								<leovar:subst>
									<leovar:del rend="overstrike" seq="1">pudica,</leovar:del>
									<leovar:add place="supralinear" rend="insertion" seq="2">pensosa,</leovar:add>
								</leovar:subst>
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								pensosa
							</leovar:var>
						</leovar:vars>
						il limitare
					</leovar:l>
					<leovar:l n="6">Di gioventù salivi?</leovar:l>
				</leovar:lg>
				<leovar:lg type="stanza">
					<leovar:l n="7">
						Sonavan le quiete
					</leovar:l>
					<leovar:l n="8">
						Stanze, e le vie dintorno,
					</leovar:l>
					<leovar:l n="9">
						Al tuo perpetuo canto,
					</leovar:l>
					<leovar:l n="10">
						Allor che
						<leovar:vars>
							<leovar:var rel="#ms_na,#piatti_1831">
								a l'opre
							</leovar:var>
							<leovar:var rel="#starita_1835,#lemonnier_1845">
								all'opre
							</leovar:var>
						</leovar:vars>
						femminili intenta
					</leovar:l>
					<leovar:l n="11">
						Sedevi, assai <rhyme corresp="enta-10">contenta</rhyme>
					</leovar:l>
					<leovar:l n="12">
						Di quel vago avvenir che in mente avevi.
						<leovar:var rel="#ms_na">
							<leovar:add place="margin left">dolce.</leovar:add>
						</leovar:var>
					</leovar:l>
					<leovar:l n="13">
						Era il maggio odoroso: e tu solevi
					</leovar:l>
					<leovar:l n="14">
						Così menare il giorno.
					</leovar:l>
				</leovar:lg>
				<leovar:lg type="stanza">
					<leovar:l n="15">
						Io gli studi 
						<leovar:var rel="#ms_na">
							<leovar:del rend="overstrike">miei dolci</leovar:del>
							<leovar:add place="margin left">lunghi.</leovar:add>
						</leovar:var>
						leggiadri
					</leovar:l>
					<leovar:l n="16">
						Talor lasciando e le sudate carte,<leovar:var rel="#ms_na"><leovar:metamark function="insertion" rend="cross" xml:id="crossCarte">†</leovar:metamark></leovar:var>
						<add place="margin left">dilette.</add>
					</leovar:l>
					<addSpan rend="cross" xsi:IDREF="#crossCarte"/>
					<leovar:l n="17">
						<leovar:vars>
							<leovar:var rel="#ms_na">
								<leovar:add place="margin left" xsi:IDREF="#crossCarte">
									<leovar:metamark function="insertion" rend="cross">†</leovar:metamark>
									Ove il tempo mio primo
								</leovar:add>
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								Ove il tempo mio primo
							</leovar:var>
						</leovar:vars>
					</leovar:l>
					<leovar:l n="18">
						<leovar:vars>
							<leovar:var rel="#ms_na">
								<leovar:add place="margin left">
									E di me si spendea la miglior parte
									<leovar:supplied reason="illegible">
										<leovar:choice>
											<leovar:seg>,</leovar:seg>
											<leovar:seg>;</leovar:seg>
										</leovar:choice>
									</leovar:supplied>
								</leovar:add>
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								E di me si spendea la miglior parte,
							</leovar:var>
						</leovar:vars>
						<leovar:var rel="#ms_na">
							<leovar:add place="top opposite">
								Ov'io di me spendea, Ov'io ponea di me la miglior parte. Ove de gli anni primi, acerbi, verdi Trapassando, Dispensando, i<leovar:del rend="doublestrikes(vertical)"><leovar:unclear reason="illegible" unit="char" extent="1">o</leovar:unclear></leovar:del>' venia la miglior parte. l'età più verde. E de gli anni io spendea la ec. l'età fiorita. Ove il fior de le forze ec.
							</leovar:add>
						</leovar:var>
					</leovar:l>
					<leovar:l n="19">
						D'in su i 
						<leovar:vars>
							<leovar:var rel="#ms_na">
								<leovar:subst>
									<leovar:del rend="overstrike" seq="1">balconi</leovar:del>
									<leovar:add place="supralinear" rend="insertion" seq="2">veroni</leovar:add>
								</leovar:subst>
								<leovar:metamark function="insertion" rend="caret">^</leovar:metamark>del paterno ostello
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								D’in su i veroni del paterno ostello
							</leovar:var>
						</leovar:vars>
					</leovar:l>
					<leovar:l n="20">
						Porgea
						<leovar:vars>
							<leovar:var rel="#ms_na">
								<leovar:add rend="overstrike">g</leovar:add>l<leovar:add rend="overstrike">i</leovar:add><leovar:del place="inline">'</leovar:del> orecchi<leovar:del place="inline">o</leovar:del>
							</leovar:var>
							<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
								gli orecchi
							</leovar:var>
						</leovar:vars>
						al suon de la tua
						<leovar:vars>
							<leovar:var rel="#ms_na,#piatti_1831">
								de la
							</leovar:var>
							<leovar:var rel="#starita_1835,#lemonnier_1845">
								della
							</leovar:var>
						</leovar:vars>
						tua voce,
					</leovar:l>
					<leovar:l n="21">
						Ed
						<leovar:vars>
							<leovar:var rel="#ms_na,#piatti_1831">
								a la
							</leovar:var>
							<leovar:var rel="#starita_1835,#lemonnier_1845">
								alla
							</leovar:var>
						</leovar:vars>
						man veloce
					</leovar:l>
					<leovar:l n="22">
						Che
						<leovar:var rel="#ms_na">
							<leovar:subst>
								<leovar:del rend="overstrike" seq="1">percotea</leovar:del>
								<leovar:add place="supralinear" rend="unmarked" seq="2">percorrea</leovar:add>
							</leovar:subst>
						</leovar:var>
						<leovar:var rel="#piatti_1831,#starita_1835,#lemonnier_1845">
							percorrea
						</leovar:var>
						la faticosa tela.
					</leovar:l>
					<leovar:l n="23">
						Mirava il ciel sereno,
					</leovar:l>
					<leovar:l n="24">
						Le vie dorate e gli orti,
					</leovar:l>
					<leovar:l n="25">
						E quinci il mar da lungi, e quindi il monte.
					</leovar:l>
					<leovar:l n="26">
						Lingua mortal non dice
					</leovar:l>
					<leovar:l n="27">
						Quel ch'io sentiva in sen.
					</leovar:l>
				</leovar:lg>
			</leovar:lg>
			<!-- ... -->
		</leovar:main>
	</leovar:body>
